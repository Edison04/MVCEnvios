@model IEnumerable<MVCEnvios.Models.Guia>

@{
    ViewBag.Title = "Guías";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="black-text" href=@Url.Action("Create", "Guias")><i class="medium material-icons">add_circle</i></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Cédula")
        </th>
        <th>
            @Html.DisplayName("Dirección Origen")
        </th>
        <th>
            @Html.DisplayName("Teléfono Emisor")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receptor)
        </th>
        <th>
            @Html.DisplayName("Dirección Destino")
        </th>
        <th>
            @Html.DisplayName("Teléfono Receptor")
        </th>
        <th>
            @Html.DisplayName("Tipo Paquete")
        </th>
        <th>
            @Html.DisplayName("Destino")
        </th>
        <th>
            @Html.DisplayName("Peso")
        </th>
        <th>
            @Html.DisplayName("Valor")
        </th>
        <th>
            @Html.DisplayName("Observación")
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cliente.Cedula)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sede.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DireccionOrigen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TelefonoEmisor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Receptor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DireccionDestino)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TelefonoReceptor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoPaquete)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CiudadDestino)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PesoPaquete)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ValorEnvio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Observacion)
    </td>


    <td>
        @Html.ActionLink("create", "Edit", new { id = item.Id }, new { @class = "material-icons" })
        @Html.ActionLink("list", "Details", new { id = item.Id }, new { @class = "material-icons" })
        @Html.ActionLink("delete", "Delete", new { id = item.Id }, new { @class = "material-icons" })
    </td>
</tr>
}

</table>
