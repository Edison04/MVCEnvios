@model MVCEnvios.Models.Guia

@{
    ViewBag.Title = "Editar";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Guía</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="input-field col s12">
                <div class="input-field col s4">
                    @Html.DropDownList("IdSede", null, htmlAttributes: new { @class = "form-control" })
                    @Html.LabelFor(model => model.IdSede, "row", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.IdSede, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s4">
                    @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
                    @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s4">
                    @Html.DropDownList("IdCliente", null, htmlAttributes: new { @class = "form-control" })
                    @Html.LabelFor(model => model.IdCliente, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.DireccionOrigen, "Dirección Origen", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.DireccionOrigen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DireccionOrigen, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.TelefonoEmisor, "Teléfono Emisor", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.TelefonoEmisor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TelefonoEmisor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="input-field col s12">
                <div class="input-field col s5">
                    @Html.LabelFor(model => model.Receptor, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Receptor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Receptor, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s5">
                    @Html.LabelFor(model => model.DireccionDestino, "Dirección Destino", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.DireccionDestino, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DireccionDestino, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.TelefonoReceptor, "Teléfono Receptor", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.TelefonoReceptor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TelefonoReceptor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <div class="input-field col s4">
                    @Html.LabelFor(model => model.CiudadDestino, "Ciudad Destino", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.CiudadDestino, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CiudadDestino, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s3">
                    @Html.LabelFor(model => model.TipoPaquete, "Tipo de Paquete", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.TipoPaquete, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TipoPaquete, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s3">
                    @Html.LabelFor(model => model.PesoPaquete, "Peso (Kg)", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.PesoPaquete, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PesoPaquete, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.ValorEnvio, "Valor", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.ValorEnvio, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.ValorEnvio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">            
            <div class="input-field col s12">
                @Html.LabelFor(model => model.Observacion, "Observación", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" /> |
                @Html.ActionLink("Regresar", "Index")
            </div>
        </div>
    </div>
}
