@model IEnumerable<MVCEnvios.ServiceCliente.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col s2">
        <a class="black-text" href=@Url.Action("Create", "Clientes")><i class="medium material-icons">add_circle</i></a>
    </div>
    <div class="col s4 input-field">
        <label for="Filtrar">Filtrar</label>
        <input type="text" name="Filtrar" id="Filtrar" />
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Cédula")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayName("Dirección")
            </th>
            <th>
                @Html.DisplayName("Teléfono")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="filtro">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("create", "Edit", new { id = item.Id }, new { @class = "material-icons" })
                    @Html.ActionLink("list", "Details", new { id = item.Id }, new { @class = "material-icons" })
                    @Html.ActionLink("delete", "Delete", new { id = item.Id }, new { @class = "material-icons" })
                </td>
            </tr>
        }
    </tbody>
</table>
