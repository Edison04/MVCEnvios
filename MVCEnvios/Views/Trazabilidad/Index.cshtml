@model IEnumerable<MVCEnvios.Models.Trazabilidad>

@{
    ViewBag.Title = "Trazabilidad";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="black-text" href=@Url.Action("Create", "Trazabilidad")><i class="medium material-icons">add_circle</i></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Origen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observaciones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoPaquete.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Guia.Sede)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Origen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destino)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observaciones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoPaquete.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Guia.Sede)
        </td>
        <td>
            @Html.ActionLink("create", "Edit", new { id = item.Id }, new { @class = "material-icons" })
            @Html.ActionLink("list", "Details", new { id = item.Id }, new { @class = "material-icons" })
            @Html.ActionLink("delete", "Delete", new { id = item.Id }, new { @class = "material-icons" })
        </td>
    </tr>
}

</table>
