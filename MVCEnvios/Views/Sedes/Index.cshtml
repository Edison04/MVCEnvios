@model IEnumerable<MVCEnvios.ServiceSede.Sede>

@{
    ViewBag.Title = "Sedes";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col s2">
        <a class="black-text" href=@Url.Action("Create", "Sedes")><i class="medium material-icons">add_circle</i></a>
    </div>
    <div class="col s4 input-field">
        <label for="Filtrar">Filtrar</label>
        <input type="text" name="Filtrar" id="Filtrar" />
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayName("Dirección")
            </th>
            <th>
                @Html.DisplayName("Teléfono")
            </th>
            <th>
                @Html.DisplayName("Estado")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="filtro">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.EstadoSede.Estado)*@
                    @{
                        var estadoSede = item.IdEstadoSede;
                        if (estadoSede.Equals(1))
                        {
                            @Html.DisplayName("ACTIVA")
                        }
                        else
                        {
                            @Html.DisplayName("INACTIVA")
                        }
                    }
                </td>
                <td>
                    @Html.ActionLink("create", "Edit", new { id = item.Id }, new { @class = "material-icons" })
                    @Html.ActionLink("list", "Details", new { id = item.Id }, new { @class = "material-icons" })
                    @Html.ActionLink("delete", "Delete", new { id = item.Id }, new { @class = "material-icons" })
                </td>
            </tr>
        }
    </tbody>
</table>
