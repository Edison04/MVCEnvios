@model IEnumerable<MVCEnvios.ServiceLogin.Login>

@{
    ViewBag.Title = "Usuarios";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col s2">
        <a class="black-text" href=@Url.Action("Create", "Logins")><i class="medium material-icons">add_circle</i></a>
    </div>
    <div class="col s4 input-field">
        <label for="Filtrar">Filtrar</label>
        <input type="text" name="Filtrar" id="Filtrar" />
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="filtro">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol)
                </td>
                <td>
                    @Html.ActionLink("create", "Edit", new { id = item.Id }, new { @class = "material-icons" })
                    @Html.ActionLink("list", "Details", new { id = item.Id }, new { @class = "material-icons" })
                    @Html.ActionLink("delete", "Delete", new { id = item.Id }, new { @class = "material-icons" })
                </td>
            </tr>
        }
    </tbody>
</table>
