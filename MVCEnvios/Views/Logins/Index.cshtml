@model IEnumerable<MVCEnvios.Models.Login>

@{
    ViewBag.Title = "Usuarios";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="black-text" href=@Url.Action("Create", "Logins")><i class="medium material-icons">add_circle</i></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol)
        </td>
        <td>
            @Html.ActionLink("create", "Edit", new { id = item.Id }, new { @class = "material-icons" })
            @Html.ActionLink("list", "Details", new { id = item.Id }, new { @class = "material-icons" })
            @Html.ActionLink("delete", "Delete", new { id = item.Id }, new { @class = "material-icons" })
        </td>
    </tr>
}

</table>
